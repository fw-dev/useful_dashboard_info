    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            // "args": [
            //     "-X"
            // ],
            "console": "integratedTerminal",
            "skipFiles": [
                "inspector_async_hook.js",
                "async_hooks.js"
            ]
        },
        {
            "name": "Python: Run Tests",
            "type": "python",
            "request": "launch",
            "program": "test",
            "env": {
                "PYTHONPATH": "${workspaceFolderBasename}"
            },
            "console": "integratedTerminal"
        }
    ]
}